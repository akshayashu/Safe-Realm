<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setup.InfoSecond">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.75"
        android:transitionName="bk_image"
        android:src="@drawable/alert_cop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionName="ll"
        app:layout_constraintHeight_percent="0.32"
        android:background="@drawable/round_corner_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:transitionName="infoTitle"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Alert Cops"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/infoBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:transitionName="infoBody"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/info2"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#40514E"
                android:background="@drawable/round_corner_white"
                android:padding="5dp" />

            <View
                android:id="@+id/dots"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:transitionName="dots"
                android:background="@drawable/round_corner_white"
                android:padding="5dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_corner_white"
                android:backgroundTint="#40514E"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:transitionName="ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nextBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner_white"
                android:elevation="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Next"
                android:textColor="#000"
                android:textSize="24sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/skipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Skip"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>